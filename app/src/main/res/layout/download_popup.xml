<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appThemeColor"
    android:orientation="vertical">

    <Button
        android:id="@+id/fb_cancel_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="@color/appThemeColor"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/red" />

    <LinearLayout
        android:id="@+id/label_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="What would you like to do for this video?"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <Button
            android:layout_weight="1"
            android:id="@+id/fb_watch_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/watchbtn"
            android:gravity="center"
            android:textColor="@color/red" />

        <Button
            android:layout_weight="1"
            android:id="@+id/fb_download_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/downloadbtn"
            android:gravity="center"
            android:textColor="@color/red" />
    </LinearLayout>

</LinearLayout>