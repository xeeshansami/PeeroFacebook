<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="100">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/slider1_tv1"
        android:src="@drawable/tv_icon"/>
    <TextView
        android:layout_weight="25"
        android:id="@+id/slider1_tv1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="@string/slider1Heading"
        android:gravity="center"
        android:layout_above="@+id/slider1_tv2"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/slider1_tv2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="@string/slider2Word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
